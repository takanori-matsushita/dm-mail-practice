<h1>ユーザー一覧</h1>
<table class="table table-striped table-hover">
  <tr>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to "詳細", "#", class: "btn btn-sm btn-primary" %></td>
    <td><%= link_to "削除", "#", method: :delete, class: "btn btn-sm btn-danger" %></td>
  </tr>
  <% end %>
</table>